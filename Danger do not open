<script>
const noTexts = [
    "NO üòê",
    "Are you sure? ü•∫",
    "Really sure? üòü",
    "Still going for no? üò¢",
    "This hurts üíî",
    "I‚Äôm sad now üò≠",
    "Please rethink üíû",
    "Almost there ü•π",
    "Don‚Äôt break my heart üíñ",
    "You asked for it üòå"
];

let noCount = localStorage.getItem("noCount")
    ? parseInt(localStorage.getItem("noCount"))
    : 0;

let yesScale = 1 + noCount * 0.25;

const yesBtn = document.getElementById("yes");
const noBtn = document.getElementById("no");
const cuteMusic = document.getElementById("cuteMusic");
const finalMusic = document.getElementById("finalMusic");
const yesSound = document.getElementById("yesSound");
const noSound = document.getElementById("noSound");

yesBtn.style.transform = `scaleX(${yesScale})`;
noBtn.innerText = noTexts[Math.min(noCount, 9)];
noBtn.style.marginTop = `${noCount * 8}px`;

noBtn.onclick = () => {
    noSound.play();
    noBtn.classList.add("shake");
    setTimeout(() => noBtn.classList.remove("shake"), 400);

    noCount++;
    localStorage.setItem("noCount", noCount);

    if (noCount >= 10) {
        fullYes();
    } else {
        setTimeout(() => location.reload(), 600);
    }
};

yesBtn.onclick = fullYes;

function fullYes() {
    localStorage.clear();
    yesSound.play();
    cuteMusic.pause();
    finalMusic.play();

    yesBtn.classList.add("zoomOut");

    setTimeout(() => {
        document.body.style.background =
            "radial-gradient(circle at top, #1a1a40, #000)";
        document.body.innerHTML = `
            <div class="final">
                <h1>I KNEW YOU WOULD SAY YES üíï</h1>
                <h2>You are the best thing in my life üåç</h2>
                <h1>I LOVE YOU ‚ù§Ô∏è</h1>
            </div>
            <div class="hearts"></div>
            <div class="celebration"></div>
        `;
        startHearts();
        startCelebration();
    }, 900);
}

function startHearts() {
    setInterval(() => spawn("‚ù§Ô∏è"), 200);
}

function startCelebration() {
    setInterval(() => {
        spawn(["üéÜ","üéâ","üéä","‚ú®","üíò"][Math.floor(Math.random()*5)]);
    }, 150);
}

function spawn(symbol) {
    const el = document.createElement("div");
    el.className = "float";
    el.innerHTML = symbol;
    el.style.left = Math.random() * 100 + "vw";
    document.body.appendChild(el);
    setTimeout(() => el.remove(), 5000);
}
</script>

